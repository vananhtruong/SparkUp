@{
    ViewData["Title"] = "Forgot Password";
}

<div class="authentication_container" id="container">
    <div class="authentication_forms-wrapper">
        <div class="authentication_form-box authentication_login-box">
            <h2>Forgot Password</h2>
            <p class="text-muted mb-4">Don't worry! Enter your email and we'll send you a link to reset your password.</p>
            <form asp-action="ForgotPassword" asp-controller="Authentication">
                <input type="email" name="email" placeholder="Email" required />
                <button type="submit">Send Reset Link</button>
                <div class="authentication_divider">
                    <span>or</span>
                </div>
                <a href="@Url.Action("Index", "Authentication")" class="authentication_google-btn">
                    <span class="material-icons align-middle" style="font-size:18px;vertical-align:middle;">arrow_back</span>
                    <span class="align-middle">Back to Login</span>
                </a>
            </form>
        </div>
    </div>

    <!-- Side panel -->
    <div class="authentication_side-panel">
        <div class="authentication_panel authentication_login-panel">
            <h2>Need Help?</h2>
            <p>We'll help you get back into your account. Just enter your email address and we'll send you a password reset link.</p>
            <a href="@Url.Action("Index", "Authentication")" class="btn btn-outline-light">Back to Login</a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function switchToLogin() {
            window.location.href = '@Url.Action("Index", "Authentication")';
        }
    </script>
}
